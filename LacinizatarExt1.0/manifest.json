{
  "manifest_version": 2,

  "name": "Lacinizatar",
  "description": "Transliter web-pages",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "≈Åacinka"
  },
  "background":{
    "scripts": ["content.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery-3.1.1.min.js",
        "transliter.js",
        "script.js",
        "content.js"
      ]

    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ]
}
